{
  "version": 2,
  "configurePresets": [
    {
      "name": "vcpkg-ninja",
      "hidden": true,
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/build/${presetName}",
      "cacheVariables": {
        "CMAKE_TOOLCHAIN_FILE": "${sourceDir}/vcpkg/scripts/buildsystems/vcpkg.cmake"
      }
    },
    {
      "name": "debug",
      "inherits": "vcpkg-ninja",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "GODOTCPP_TARGET": "template_debug"
      }
    },
    {
      "name": "release",
      "inherits": "vcpkg-ninja",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release",
        "GODOTCPP_TARGET": "template_release"
      }
    },
    {
      "name": "syntax-only",
      "inherits": "debug",
      "cacheVariables": {
        "SYNTAX_ONLY": "ON"
      }
    },
    {
      "name": "fast-dev",
      "displayName": "Fast Development Build",
      "description": "Optimized for fast compilation during development (uses clang + lld)",
      "inherits": "vcpkg-ninja",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "GODOTCPP_TARGET": "template_debug",
        "CMAKE_C_COMPILER": "clang",
        "CMAKE_CXX_COMPILER": "clang++",
        "CMAKE_EXE_LINKER_FLAGS": "-fuse-ld=lld",
        "CMAKE_SHARED_LINKER_FLAGS": "-fuse-ld=lld",
        "CMAKE_MODULE_LINKER_FLAGS": "-fuse-ld=lld",
        "CMAKE_CXX_FLAGS_DEBUG": "-O0 -g1 -gsplit-dwarf",
        "CMAKE_C_FLAGS_DEBUG": "-O0 -g1 -gsplit-dwarf",
        "GODOTCPP_DEV_BUILD": "ON"
      }
    }
  ],
  "buildPresets": [
    {
      "name": "debug",
      "configurePreset": "debug",
      "targets": ["install"]
    },
    {
      "name": "release",
      "configurePreset": "release",
      "targets": ["install"]
    },
    {
      "name": "syntax-only",
      "configurePreset": "syntax-only",
      "targets": ["install"]
    },
    {
      "name": "fast-dev",
      "displayName": "Fast Development Build",
      "description": "Optimized for fast compilation during development",
      "configurePreset": "fast-dev",
      "targets": ["install"]
    }
  ]
}
